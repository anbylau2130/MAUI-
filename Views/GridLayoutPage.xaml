<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Com.Kingdee.App.Views.GridLayoutPage"
             Title="GridLayoutPage">
   <VerticalStackLayout >
     
       <Grid 
           ColumnDefinitions="*,*,*"
           RowDefinitions="*,*,*,*"
           >
        <Label 
            Grid.Column="0"
            Grid.Row="0"
            HorizontalOptions="End"
            Margin="5"
            Text="UserName"
            VerticalOptions="Center"
               ></Label>
        <Entry
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            HorizontalOptions="Center"
            Margin="5,20,0,10"
            Placeholder="UserName"
            Text=""
            VerticalOptions="End"
            WidthRequest="150"
            ></Entry>

           <Label 
               Grid.Column="0"
               Grid.Row="1"
               HorizontalOptions="End"
               Margin="5,10"
               Text="Password"
               VerticalOptions="Center"
           ></Label>
           <Entry
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Grid.Row="1"
               HorizontalOptions="Center"
               IsPassword="True"
              
               Placeholder="Password"
               Text=""
               VerticalOptions="Start"
               WidthRequest="150"
           ></Entry>


        </Grid>
   </VerticalStackLayout>
</ContentPage>