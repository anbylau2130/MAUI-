<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Com.Kingdee.App.Views.PreferencePage">
<ScrollView>
<VerticalStackLayout>
    <!--自动换行 LineBreakMode="WordWrap"-->
    <Label Margin="5"
           Padding="5"
           HorizontalOptions="Center"
           LineBreakMode="WordWrap" 
           Text=""></Label>
    <Button
        Margin="30,20,0,0"
       Clicked="Button_OnClicked"
        Command="{Binding SavePrefereceCommand}"
        Text="Save"></Button>
	<CollectionView
        Margin="20,20,10,10"
        ItemsSource="{Binding PreferenceList}"
        SelectionMode="None">
	
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*,2*">
                    <Entry
                        Grid.Column="0"
                        FontSize="10"
                        HorizontalOptions="Start"
                        Text="{Binding PreferencePrompt,Mode=TwoWay}"
                        TextColor="{OnPlatform Default= Black,iOS=White}"
                        ></Entry>
                    <Entry
                        Grid.Column="1"
                        FontSize="10"
                        HeightRequest="32"
                        WidthRequest="350"
                        HorizontalOptions="Start"
                        Text="{Binding PreferenceValue,Mode=TwoWay}"
                        TextColor="{OnPlatform Default= Black,iOS=White}"
                    ></Entry>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>

		</CollectionView>

    <Button
        Margin="30,20,0,0"
        Clicked="Button_OnClicked"
        Command="{Binding SavePrefereceCommand}"
        Text="Save"></Button>
</VerticalStackLayout>

</ScrollView>

</ContentPage>