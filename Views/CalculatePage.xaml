<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Com.Kingdee.App.Views.CalculatePage"
             Title="CalculatePage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="HeightRequest" Value="75"></Setter>
            <Setter Property="WidthRequest" Value="75"></Setter>
            <Setter Property="BackgroundColor" Value="Gray"></Setter>
            <Setter Property="TextColor" Value="Black"></Setter>
            <Setter Property="Margin" Value="4"></Setter>
        </Style>
        <Style TargetType="FlexLayout">
            <Setter Property="HorizontalOptions" Value="Center"></Setter>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*,*,Auto"
           ColumnDefinitions="*,*,*,Auto"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           RowSpacing="10"
           ColumnSpacing="10"
           >
            <FlexLayout  Grid.Column="0" Grid.Row="0">
                <Button Text="Clear"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="1" Grid.Row="0">
                <Button Text="="/>
            </FlexLayout>
            <FlexLayout  Grid.Column="2" Grid.Row="0">
                <Button Text="/"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="3" Grid.Row="0">
                <Button  Text="*"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="0" Grid.Row="1">
                <Button  Text="7"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="1" Grid.Row="1">
                <Button  Text="8"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="2" Grid.Row="1">
                <Button  Text="9"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="3" Grid.Row="1">
                <Button  Text="-"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="0" Grid.Row="2">
                <Button  Text="4"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="1" Grid.Row="2">
                <Button  Text="5"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="2" Grid.Row="2">
                <Button Text="6"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="3" Grid.Row="2">
                <Button  Text="+"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="0" Grid.Row="3">
                <Button  Text="1"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="1" Grid.Row="3" >
                <Button  Text="2"/>
            </FlexLayout>
            <FlexLayout  Grid.Column="2" Grid.Row="3">
                <Button  Text="3"/>
            </FlexLayout>

            <FlexLayout  Grid.Column="3" Grid.RowSpan="2" Grid.Row="3">
                <Button  HeightRequest="165" Text="Enter"/>
            </FlexLayout>

            <FlexLayout  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4"  >
                <Button WidthRequest="180"  Text="0"/>
            </FlexLayout>

            <FlexLayout  Grid.Column="2" Grid.Row="4">
                <Button  Text="."/>
            </FlexLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>